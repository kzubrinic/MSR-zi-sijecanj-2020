<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Zadatak1Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70pt"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/slika_kocke1"
            android:layout_width="@android:dimen/app_icon_size"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/k00" />

        <ImageView
            android:id="@+id/slika_kocke2"
            android:layout_width="@android:dimen/app_icon_size"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/k00" />

        <ImageView
            android:id="@+id/slika_kocke3"
            android:layout_width="@android:dimen/app_icon_size"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/k00" />
    </LinearLayout>

    <Button
        android:id="@+id/bZavrti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="baciKocku"
        android:text="@string/gumb_baci" />
</LinearLayout>